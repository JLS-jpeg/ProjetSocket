<Window x:Class="PromeoCrypto.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="PromeoCrypto" Height="350" Width="525" FontFamily="Bahnschrift Light" Foreground="White">
    <Grid>
        <StackPanel Background="#FF312E98">
            <Label Content="Entrez le texte à chiffrer :" FontFamily="Bahnschrift Light" Background="#00000000" Foreground="White"  />
            <TextBox Name="InputTextBox" KeyDown="InputTextBox_KeyDown" />
            <GroupBox Header="Méthode de chiffrement" FontFamily="Bahnschrift Light">
                <StackPanel Orientation="Horizontal">
                    <RadioButton Name="CaesarRadioButton" Content="César" IsChecked="True" Foreground="White"/>
                    <RadioButton Name="PlayfairRadioButton" Content="Playfair" FontFamily="Bahnschrift Light" Foreground="White"/>
                    <RadioButton Name="SubstitutionRadioButton" Content="Substitution" FontFamily="Bahnschrift Light" Foreground="White"/>
                </StackPanel>
            </GroupBox>
            <Button Content="Chiffrer" Click="EncryptButton_Click" FontFamily="Bahnschrift Light" />
            <Label Content="Texte chiffré :" FontFamily="Bahnschrift Light" Foreground="White"/>
            <Label Name="OutputLabel" Background="White" />
        </StackPanel>
    </Grid>
</Window>